@using PortfolioCoreDay.Entities
@model List<Contact>

<section id="contact" class="contact section">

    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>Bana ulaşmak için aşağıdaki kanalları kullanabilir veya doğrudan mesaj gönderebilirsiniz.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-5">
                    <div class="info-wrap">
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                            <i class="bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h3>Adres</h3>
                                <p>@item.Address</p>
                            </div>
                        </div>

                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-telephone flex-shrink-0"></i>
                            <div>
                                <h3>Bize Ulaşın</h3>
                                <p>@item.Phone</p>
                            </div>
                        </div>

                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h3>E-posta</h3>
                                <p>@item.Email</p>
                            </div>
                        </div>

                        <iframe src="@item.MapUrl" frameborder="0" style="border:0; width: 100%; height: 270px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            }

            <div class="col-lg-7">
               
                <form action="/Default/SendMessage" method="post" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <label for="name-field" class="pb-2">Adınız</label>
                            <input type="text" name="NameSurname" id="name-field" class="form-control" required="">
                        </div>
                        <div class="col-md-6">
                            <label for="email-field" class="pb-2">E-posta Adresiniz</label>
                            <input type="email" class="form-control" name="Email" id="email-field" required="">
                        </div>
                        <div class="col-md-12">
                            <label for="subject-field" class="pb-2">Konu</label>
                            <input type="text" class="form-control" name="Subject" id="subject-field" required="">
                        </div>
                        <div class="col-md-12">
                            <label for="message-field" class="pb-2">Mesajınız</label>
                            <textarea class="form-control" name="MessageDetail" rows="10" id="message-field" required=""></textarea>
                        </div>
                        <div class="col-md-12 text-center">
                            
                            <button type="submit" class="btn btn-primary" style="background-color:#0563bb; border:0; padding:10px 30px; color:#fff; border-radius:50px;">Mesaj Gönder</button>
                            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                            <script>
                                @if (TempData["SuccessMessage"] != null)
                                {
                                        <text>
                                        Swal.fire({
                                            title: 'Başarılı!',
                                            text: '@Html.Raw(TempData["SuccessMessage"])',
                                            icon: 'success',
                                            confirmButtonText: 'Tamam'
                                        });
                                        </text>
                                }
                            </script>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>