@model List<PortfolioCoreDay.Entities.Message>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var detail = ViewBag.MessageDetail as PortfolioCoreDay.Entities.Message;
}

<div class="container-fluid mt-4">
    <h3 class="mb-4">Mesaj Yönetimi</h3>

    
    @if (detail != null)
    {
        <div class="card border-primary shadow mb-5">
            <div class="card-header bg-primary text-white d-flex justify-content-between">
                <h5 class="mb-0">Mesaj Detayı: @detail.Subject</h5>
                <a href="/Message/Index" class="btn-close btn-close-white"></a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Gönderen:</strong> @detail.NameSurname</p>
                        <p><strong>E-posta:</strong> @detail.Email</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p><strong>Tarih:</strong> @detail.SendDate.ToString("dd MMMM yyyy HH:mm")</p>
                    </div>
                </div>
                <hr />
                <p><strong>İçerik:</strong></p>
                <div class="p-3 bg-light border rounded">
                    @detail.MessageDetail
                </div>
            </div>
        </div>
    }

    @* --- MESAJ LİSTESİ --- *@
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Durum</th>
                        <th>Gönderen</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="@(item.Isread == false ? "font-weight:bold; background-color: #fcfcfc;" : "")">
                            <td>
                                @if (item.Isread)
                                {
                                    <span class="badge bg-secondary">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Yeni Mesaj</span>
                                }
                            </td>
                            <td>@item.NameSurname</td>
                            <td>@item.Subject</td>
                            <td>@item.SendDate.ToShortDateString()</td>
                            <td class="text-center">
                                <a href="/Message/Index/@item.MessageId" class="btn btn-outline-info btn-sm">Oku</a>
                                <a href="/Message/DeleteMessage/@item.MessageId"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Bu mesaj silinsin mi ?')">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>