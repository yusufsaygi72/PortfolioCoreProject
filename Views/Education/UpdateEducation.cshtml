@model PortfolioCoreDay.Entities.Education
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h3>Eğitim Bilgisini Güncelle</h3>
    <form method="post">
        @* ID'yi gizli tutuyoruz ki hangi kaydı güncellediğimizi bilelim *@
        @Html.HiddenFor(x => x.EducationId)

        <label>Derece (Title)</label>
        <input type="text" asp-for="Title" class="form-control" style="border: 1px solid #000;" />
        <br />

        <label>Üniversite</label>
        <input type="text" asp-for="Universty" class="form-control" style="border: 1px solid #000;" />
        <br />

        <label>Bölüm</label>
        <input type="text" asp-for="Department" class="form-control" style="border: 1px solid #000;" />
        <br />

        <label>Tarih Aralığı</label>
        <input type="text" asp-for="EducationDate" class="form-control" style="border: 1px solid #000;" />
        <br />

        <button class="btn btn-success">Değişiklikleri Kaydet</button>
    </form>
</div>